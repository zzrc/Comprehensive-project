<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SubmitMapper">

    <sql id="Base_Column_List">
        id,name,img,time,status
    </sql>

    <select id="selectAll" resultType="com.example.entity.Submit">
        select
        <include refid="Base_Column_List" />
        from submit
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null"> and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Submit">
        select
        <include refid="Base_Column_List" />
        from submit
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from submit
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Submit" useGeneratedKeys="true">
        insert into submit
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="name != null">name,</if>
                <if test="img != null">img,</if>
                <if test="time != null">time,</if>
                <if test="status != null">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="name != null">#{name},</if>
                <if test="img != null">#{img},</if>
                <if test="time != null">#{time},</if>
                <if test="status != null">#{status},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Submit">
        update submit
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>